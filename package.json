{
  "name": "http.io",
  "version": "0.0.1",
  "main": "bin/index.js",
  "dependencies": {
    "codec": "0.0.3"
  },
  "devDependencies": {
    "yaa": "0.0.1",
    "closurecompiler-externs": "*"
  },
  "scripts": {
    "lint": "node ./build.js lint",
    "check": "node ./build.js check",
    "compile": "node ./build.js compile",
    "test": "node ./test/test.js",
    "build": "npm run lint && npm run check && npm run compile"
  },
  "closure-compiler": {
    "path": "/usr/lib/closure-compiler/closure-compiler.jar",
    "externs": [
      "externs/util.js",
      "node_modules/codec/externs/index.js",
      "externs/url.js",
      "externs/buffer.js",
      "externs/events.js",
      "externs/stream.js",
      "externs/net.js",
      "externs/http.js"
    ],
    "flags": [
      "--warning_level=VERBOSE",
      "--language_in=ECMASCRIPT5_STRICT",
      "--jscomp_error=checkTypes",
      "--jscomp_error=suspiciousCode"
    ]
  }
}
